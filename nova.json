{
    "project": {
        "source": "src",
        "destination": "dist"
    },
    "plugins": {
        "static": [
            "assets/",
            "css/",
            "fonts/",
            "js/",
            "page/",
            "favicon.ico",
            "robots.txt"
        ],
        "minify": {
            "suffixes": [".css", ".html"],
            "options": {
                "ensure_spec_compliant_unquoted_attribute_values": false,
                "keep_closing_tags": false
            }
        }
    }
}